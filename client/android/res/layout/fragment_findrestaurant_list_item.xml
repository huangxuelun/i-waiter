<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="3"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvrestaurantname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_row="0"
        android:text="XXX饭店"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvaverageprice"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_row="1"
        android:text="@string/average_price" />
    <RatingBar
        android:id="@+id/restaurantrating"
        android:layout_column="0"
        android:layout_gravity="left" android:layout_row="1"/>

    <TextView
        android:id="@+id/tvIntroduce"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/introduce_title"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_row="2" />

</GridLayout>
